---
import LanguageSwitcher from './LanguageSwitcher.astro';
import SearchBar from './SearchBar.astro';
---

<header class="relative bg-cover bg-bottom min-h-[200px] group" style="background-image: url('/bg-cropped.jpeg');">
  <div class="absolute inset-0 bg-gradient-to-b from-black/50 to-transparent"></div>
  
  <div class="relative max-w-4xl mx-auto px-4 pt-8">
    <div class="flex items-center justify-between mb-10">
      <a href="/" class="text-3xl font-bold text-white hover:text-white/90 transition-all duration-300 inline-block text-shadow">
        kelola.co
      </a>
      <LanguageSwitcher />
    </div>

    <div>
      <SearchBar />
    </div>
  </div>

  <div class="star-wrapper">
    <div class="star"></div>
    <div class="star-trail-wrapper">
      <div class="star-trail"></div>
      <div class="star-trail-2"></div>
      <div class="star-trail-3"></div>
    </div>
    <div class="particles"></div>
  </div>
</header>

<style>
  header {
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
  }

  .text-shadow {
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  }

  .star-wrapper {
    position: absolute;
    inset: 0;
    overflow: hidden;
    opacity: 0;
    pointer-events: none;
  }

  .group:hover .star-wrapper {
    animation: appear 2s ease-out forwards;
  }

  .star {
    position: absolute;
    left: 10%;
    top: 30%;
    width: 6px;
    height: 6px;
    background: #fff;
    border-radius: 50%;
    filter: blur(0px);
    animation: star 2s ease-out forwards;
    box-shadow: 
      0 0 0 4px rgba(255,255,255,0.1),
      0 0 0 8px rgba(255,255,255,0.1),
      0 0 20px rgba(255,255,255,0.9),
      0 0 40px rgba(255,255,255,0.6),
      0 0 60px rgba(255,255,255,0.3);
  }

  .star-trail-wrapper {
    position: absolute;
    left: 10%;
    top: 30%;
    width: 80%;
    animation: trail-wrapper 2s ease-out forwards;
  }

  .star-trail, .star-trail-2, .star-trail-3 {
    position: absolute;
    left: 0;
    top: 50%;
    height: 1px;
    width: 50px;
    background: linear-gradient(90deg, rgba(255,255,255,0.8), transparent);
    transform-origin: left;
  }

  .star-trail {
    animation: trail 2s ease-out forwards;
  }

  .star-trail-2 {
    height: 2px;
    opacity: 0.6;
    animation: trail 2s ease-out 0.1s forwards;
  }

  .star-trail-3 {
    height: 3px;
    opacity: 0.4;
    animation: trail 2s ease-out 0.2s forwards;
  }

  .particles {
    position: absolute;
    left: calc(10% + 3px);
    top: 30%;
    width: 80%;
    height: 2px;
    animation: star 2s ease-out forwards;
  }

  .particles::before {
    content: '';
    position: absolute;
    width: 2px;
    height: 2px;
    background: white;
    border-radius: 50%;
    animation: particles 2s ease-out infinite;
  }

  @keyframes appear {
    0% { opacity: 0; }
    10% { opacity: 1; }
    80% { opacity: 1; }
    100% { opacity: 0; }
  }

  @keyframes star {
    0% {
      transform: translate(0, 0) scale(1);
      opacity: 1;
    }
    100% {
      transform: translate(calc(100% + 50px), -20px) scale(0.2);
      opacity: 0;
    }
  }

  @keyframes trail {
    0% {
      transform: scaleX(1) translateY(-50%);
      opacity: 1;
    }
    100% {
      transform: scaleX(0) translateY(-50%);
      opacity: 0;
    }
  }

  @keyframes trail-wrapper {
    0% {
      transform: translate(0, 0);
    }
    100% {
      transform: translate(calc(100% - 50px), -20px);
    }
  }

  @keyframes particles {
    0% {
      transform: translate(0, 0) scale(0);
      opacity: 1;
    }
    50% {
      transform: translate(30px, -10px) scale(1);
      opacity: 0.5;
    }
    100% {
      transform: translate(60px, -20px) scale(0);
      opacity: 0;
    }
  }
</style>